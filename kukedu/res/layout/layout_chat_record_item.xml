<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:background="@drawable/mm_listitem">

    <ImageView android:id="@id/chat_record_img_avatar"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="5dp" />
    <TextView android:id="@id/chat_record_txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/chat_record_img_avatar"
        android:padding="7dp"
        android:text="小黑"
        android:textColor="#000" />
    <TextView android:id="@id/chat_record_txt_timeago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="7dp"
        android:text="昨天 晚上"
        android:textColor="#666" />
     <TextView android:id="@id/chat_record_txt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/chat_record_img_avatar"
        android:layout_alignParentBottom="true"
        android:padding="7dp"
        android:text="尼滚...."
        android:textColor="#666" />
</RelativeLayout>
